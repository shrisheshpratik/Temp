public static void addRoundedRectangleBorderAroundTable(Document document, int tableIndex) {
        for (Page page : document.getPages()) {
            TableAbsorber absorber = new TableAbsorber();
            absorber.visit(page);

            if (tableIndex <= absorber.getTableList().size()) {
                AbsorbedTable absorbedTable = absorber.getTableList().get(tableIndex - 1);
                Rectangle rect = absorbedTable.getRectangle();

                double margin = 5; // Add some margin around the table
                double borderWidth = rect.getWidth() + margin * 2;
                double borderHeight = rect.getHeight() + margin * 2;
                double borderX = rect.getLLX() - margin;
                double borderY = rect.getLLY() - margin;
                double cornerRadius = 10;

                Graph canvas = new Graph(page.getPageInfo().getWidth(), page.getPageInfo().getHeight());
                Rectangle roundedRect = new Rectangle(borderX, borderY, borderWidth, borderHeight);
                roundedRect.setRounded(true);
                roundedRect.setCornerRadius(cornerRadius);

                canvas.getShapes().add(roundedRect);
                page.getParagraphs().add(canvas);
            }
        }
    }
